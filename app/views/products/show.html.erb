<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Mã sản phẩm:</strong></dt>
  <dd><%= @product.masp %></dd>

  <dt><strong>Tên sản phẩm:</strong></dt>
  <dd><%= @product.tensp %></dd>

  <dt><strong>Số lượng:</strong></dt>
  <dd><%= @product.soluong %></dd>

  <dt><strong>Giá bán</strong></dt>
  <dd><%= @product.giaban %></dd>

  <dt><strong>Mô tả ngắn:</strong></dt>
  <dd><%= @product.short_description %></dd>

  <dt><strong>Mô tả chi tiết:</strong></dt>
  <dd><%= @product.long_description %></dd>

  <dt><strong>Hình ảnh:</strong></dt>
  <dd><%= image_tag @product.image.url(:thumb) %></dd>

  <dt><strong>Image_content_size:</strong></dt>
  <dd><%= @product.image_content_type %></dd>

  <dt><strong>Image_file_size:</strong></dt>
  <dd><%= @product.image_file_size %></dd>

  <dt><strong>Image_updated_at:</strong></dt>
  <dd><%= @product.image_updated_at %></dd>

  <dt><strong>Xuất xứ:</strong></dt>
  <dd><%= @product.xuatxu %></dd>

  <dt><strong>Giá khuyến mại:</strong></dt>
  <dd><%= @product.gia_khuyenmai %></dd>

  <dt><strong>View:</strong></dt>
  <dd><%= @product.view %></dd>

  <dt><strong>distribute_id:</strong></dt>
  <dd><%= @product.distribute_id %></dd>

  <dt><strong>categories_id:</strong></dt>
  <dd><%= @product.categories_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              products_path, :class => 'btn btn-primary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_path(@product), :class => 'btn btn-success' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
