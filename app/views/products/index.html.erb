<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:masp) %></th>
      <th><%= model_class.human_attribute_name(:tensp) %></th>
      <th><%= model_class.human_attribute_name(:soluong) %></th>
      <th><%= model_class.human_attribute_name(:giaban) %></th>
      <th><%= model_class.human_attribute_name(:short_description) %></th>
      <th><%= model_class.human_attribute_name(:long_description) %></th>
      <th><%= model_class.human_attribute_name(:image_file_name) %></th>
      <th><%= model_class.human_attribute_name(:image_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:xuatxu) %></th>
      <th><%= model_class.human_attribute_name(:gia_khuyenmai) %></th>
      <th><%= model_class.human_attribute_name(:view) %></th>
      <th><%= model_class.human_attribute_name(:distribute_id) %></th>
      <th><%= model_class.human_attribute_name(:categories_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.masp %></td>
        <td><%= product.tensp %></td>
        <td><%= product.soluong %></td>
        <td><%= product.giaban %></td>
        <td><%= product.short_description %></td>
        <td><%= product.long_description %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= product.image_updated_at %></td>
        <td><%= product.xuatxu %></td>
        <td><%= product.gia_khuyenmai %></td>
        <td><%= product.view %></td>
        <td><%= product.distribute_id %></td>
        <td><%= product.categories_id %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-success btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
